@model IEnumerable<PortfolioCore.Models.Config>

@{
    ViewData["Title"] = "Edit";
}

@if (Model.Count() == 0)
{
    <h1>Configuración</h1>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
else
{
    <h1 class="mb-5">Configuración</h1>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.imagen1Home)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.imagen1Home)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>