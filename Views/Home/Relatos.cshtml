@model IEnumerable<PortfolioCore.Models.Relato>

@{
    ViewData["Title"] = "View";
}

<div class="text-center mb-5">
    <h1 class="display-4">Relatos</h1>
</div>

<div class="row">
    @foreach (var item in Model.OrderBy(i => i.fecha_alta)) //agregar y ordenar por prioridad
    {
        if (item.visible == true)
        {
            <div class="col-sm-6 text-center mb-5">
                <h4>@item.titulo</h4>
                <div class="embed-responsive embed-responsive-16by9">
                    <iframe class="embed-responsive-item" src="@item.url" allowfullscreen></iframe>
                </div>
                <p>@item.descripcion</p>
                <a asp-route-id="@item.id" asp-action="DetalleRelato" asp-controller="Home" class="btn btn-light">Leer más...</a>
            </div>
        }
    }
</div>

<iframe width="100%" height="300" scrolling="no" frameborder="no" allow="autoplay" 
        src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/823183954&color=%23ff5500&auto_play=false&hide_related=false&show_comments=true&show_user=true&show_reposts=false&show_teaser=true&visual=true">
</iframe>
