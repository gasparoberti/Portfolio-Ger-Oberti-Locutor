@model PortfolioCore.Models.Relato

@{
    ViewData["Title"] = "DetalleRelato";
}

    
<h1 class="display-4 text-center">@Model.titulo</h1>

<div class="text-muted text-justify">
    <h5>@Model.descripcion</h5>
</div>

<div class="embed-responsive embed-responsive-16by9 m-4">
    <iframe class="embed-responsive-item" src="@Model.url" allowfullscreen></iframe>
</div>

<p class="text-justify">@Model.contenido</p>

<div class="text-center">
    <a asp-action="Relatos" class="btn btn-light m-3">Todos los relatos</a>
</div>