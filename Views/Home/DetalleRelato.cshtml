@model PortfolioCore.Models.Relato

@{
    ViewData["Title"] = "DetalleRelato";
}

<h1 class="display-4 text-center mb-4">@Model.titulo </h1>

<div class="row mb-4 align-items-center">
    @if (Model.id % 2 == 0)   //si es par pone la imagen a la izq y el texto a la der
    {
        <div class="col-sm-6">
            <iframe class="embed-responsive-item" src="@Model.url" allowfullscreen></iframe>
        </div>
        <div class="col-sm-6">
            <h5 class="lead text-justify">
                @Model.descripcion
            </h5>
        </div>
    }
    else
    {
        <div class="col-sm-6">
            <h5 class="lead text-justify">
                @Model.descripcion
            </h5>
        </div>

        <div class="col-sm-6">
            <iframe class="embed-responsive-item" src="@Model.url" allowfullscreen></iframe>
        </div>
    }

</div>


<div class="row mb-4">
    @Html.Raw(Model.contenido)
</div>

