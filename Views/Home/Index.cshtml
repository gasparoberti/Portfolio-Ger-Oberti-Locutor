@model IEnumerable<PortfolioCore.Models.Noticia>

@{
    ViewData["Title"] = "Home Page";
}

    <div class="card bg-dark text-white mb-3">
        @*<img class="card-img" src="..." alt="Card image">*@
        @*modificar para qe lo obtenga dinamicamente*@
        <img src="@("~/image/lacumbrecita1.jpg")" asp-append-version="true" width="100%" height="100%" />
        <div class="card-img-overlay">
            <h5 class="card-title">Germán Oberti</h5>
        </div>
    </div>

<div class="row">
    @foreach (var item in Model)
    {
        @if (@item.visible == true)
        {
            <div class="card-col-4 m-3">
                <div class="card">
                    <img class="card-img-top" src="@("/image/" + item.imagen)" alt="Card image">
                    <div class="card-body text-center">
                        <h5 class="card-title">@item.titulo</h5>
                        <p class="card-text">@item.descripcion</p>
                        <p class="card-text"><small class="text-muted">@Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.fecha_alta))</small></p>
                        <a asp-route-id="@item.id" asp-action="Leer" asp-controller="Noticias" class="btn btn-light">Leer más...</a>
                    </div>
                </div>
            </div>
        }
    }
</div>

