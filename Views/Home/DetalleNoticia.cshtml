@model PortfolioCore.Models.Noticia

@{
    ViewData["Title"] = "Detalle";
}

    <div class="text-center">
        <h1>@Model.titulo</h1>

        <div class="text-muted">
            <h5>@Model.descripcion</h5>
        </div>

        <img class="m-2" src="@("~/image/" + Model.imagen)" asp-append-version="true" alt="Notice card image" style="object-fit: cover; width: 70vw"/>

        <p>@Model.contenido</p>

        <div>
            <a asp-action="Index" class="btn btn-light m-3">Todas las noticias</a>
        </div>
    </div>


