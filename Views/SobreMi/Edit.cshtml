@model PortfolioCore.Models.SobreMi

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>SobreMi</h4>
<hr />
<div class="row">
    <div class="col">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <input type="hidden" asp-for="imagen" />
            <div class="form-group">
                <label asp-for="titulo" class="control-label"></label>
                <input asp-for="titulo" class="form-control" id="inputTitulo" onKeyUp="cantidadCaracteres()" />
                <span asp-validation-for="titulo" class="text-danger"></span>
                <label id="titulo" class="text-secondary"></label>
            </div>
            <div class="form-group">
                <label asp-for="descripcion" class="control-label"></label>
                <textarea asp-for="descripcion" class="form-control"></textarea>
                <span asp-validation-for="descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="contenido" class="control-label"></label>
                <textarea asp-for="contenido" class="form-control"></textarea>
                <span asp-validation-for="contenido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="archivoImagen" class="control-label"></label>
                <input asp-for="archivoImagen" accept="image/*" />
                <span asp-validation-for="archivoImagen" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="visible" /> @Html.DisplayNameFor(model => model.visible)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="prioridad" class="control-label"></label>
                @Html.DropDownListFor(m => m.prioridad,
                                    Enumerable.Range(1, 10).Select(i => new SelectListItem { Text = i.ToString(), Value = i.ToString() }),
                                    htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="prioridad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script src="~/js/site.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

